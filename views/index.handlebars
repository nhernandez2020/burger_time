<h1>Burgers</h1>

<h2>Burgers to Eat</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{>burgers/burger_block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>


<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{>burgers/burger_block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add Burger</h2>

<form action="" class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>

</form>